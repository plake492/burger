<h1>Burgers For All</h1>

<hr>
<h2>Not Devoured</h2>
{{#each burger}}
    <div>
    {{#unless devoured}}
        {{> burgers/burger-file devoured=true}}
    {{/unless}}
    </div>
{{/each}}

<hr>
<h2>Already Devoured</h2>


{{#each burger}}
    <div>
    {{#if devoured}}
        {{> burgers/burger-file devoured=false}}
    {{/if}}
    </div>
{{/each}}

<hr>
<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>



