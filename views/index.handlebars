<div class="row bigBox">
  <div class="col m6">
    <h3>Not Consumed</h3>
    <div class="box">
    {{#each burger}}
      <p>
        {{#unless devoured}}
            {{> burgers/burger-file devoured=true}}
        {{/unless}}
      </p>
    {{/each}}
    </div>
  </div>

  <div class="col m6">
    <h3>Already Consumed</h3>
    <div class="box">
    {{#each burger}}
      <p>
        {{#if devoured}}
            {{> burgers/burger-file devoured=false}}
        {{/if}}
      </p>
    {{/each}}
    </div>
  </div>
</div>

<h2>Add a Burger</h2>

<div class="boxForm">
  <form class="create-form">

    <div class="form-group">
      <label style="color:black"for="burgerName">Burger Name</label>
      <input style="color:black"type="text" id="burgerName" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>



